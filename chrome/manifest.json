{
  "manifest_version": 3,
  "name": "Bitbucket Blue Icon",
  "version": "1.0.1",
  "description": "Keeps the classic blue Bitbucket favicon",
  "author": "Marlon Stoops",
  "homepage_url": "https://github.com/marlonstoops/bitbucket-blue-icon",
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://bitbucket.org/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["old-bitbucket-icon.ico"],
      "matches": ["*://bitbucket.org/*"]
    }
  ]
}
